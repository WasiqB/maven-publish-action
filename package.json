{
  "name": "maven-publish-action",
  "version": "1.0.0",
  "description": "GitHub Action for automatically publishing to Maven central",
  "author": {
    "name": "Wasiq Bhamla",
    "email": "wasbhamla2005@gmail.com",
    "url": "https://github.com/WasiqB"
  },
  "repository": "github:WasiqB/maven-publish-action",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint 'lib/*.ts'",
    "lint:fix": "eslint --fix lib/**.ts",
    "format": "prettier --check lib/**.ts",
    "format:fix": "prettier --write lib/**.ts",
    "prepare": "ncc build lib/index.ts -o dist --minify"
  },
  "devDependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@tsconfig/node18": "^18.2.2",
    "@types/node": "^20.8.10",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "8.54.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "actions-toolkit": "^6.0.1"
  }
}
