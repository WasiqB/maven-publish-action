{
  "name": "maven-publish-action",
  "version": "1.0.0",
  "description": "GitHub Action for automatically publishing to Maven central",
  "type": "module",
  "author": {
    "name": "Wasiq Bhamla",
    "email": "wasbhamla2005@gmail.com",
    "url": "https://github.com/WasiqB"
  },
  "repository": "github:WasiqB/maven-publish-action",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "bundle": "npm run format:fix && npm run package",
    "lint": "eslint 'src/*.ts'",
    "lint:fix": "eslint --fix src/**.ts",
    "format": "prettier --check src/**.ts",
    "format:fix": "prettier --write src/**.ts",
    "package": "ncc build src/index.ts -o dist --minify -a --license license.txt",
    "test": "jest"
  },
  "devDependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@stylistic/eslint-plugin-js": "^1.7.0",
    "@stylistic/eslint-plugin-ts": "^1.7.0",
    "@tsconfig/node18": "^18.2.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "8.57.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.4.3"
  },
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**"
    ]
  }
}
